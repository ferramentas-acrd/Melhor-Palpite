<Layout title="Not√≠cias - Corinthians Online">
  <Header />
  
  <main class="flex-1">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <!-- Page Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold mb-4">Not√≠cias</h1>
        <p class="text-gray-600">Acompanhe todas as novidades do Corinthians</p>
