                  />
                </div>
                <div class="p-6">
                  <div class="flex items-center mb-4">
                    <span class="bg-red-600 text-white px-3 py-1 rounded text-sm font-bold mr-3">
                      DESTAQUE
                    </span>
                    <span class="text-sm text-gray-500">{formatDate(posts[0].publishedAt || posts[0].createdAt)}</span>
                  </div>
                  <h2 class="text-2xl font-bold mb-4">
                    {posts[0].title}
                  </h2>
                  {posts[0].excerpt && (
                    <p class="text-gray-600 mb-4">
                      {posts[0].excerpt}
                    </p>
                  )}
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500">Corinthians Online</span>
                    <a href={`/${posts[0].slug}`} class="text-black font-semibold hover:underline">Ler mais ‚Üí</a>
                  </div>
                </div>
              </article>
            </div>
          )}

          <!-- News Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {posts.slice(1).map((post) => (
              <article class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
                <div class="relative">
                  <img 
                    src={post.coverImage ? getImageUrl(post.coverImage, 'medium') : '/placeholder.svg'}
                    alt={post.coverImage?.alternativeText || post.title}
                    class="w-full h-48 object-cover"
                  />
                  {post.category && (
                    <div class="absolute top-3 left-3">
                      <span class="bg-black text-white px-2 py-1 rounded text-xs font-medium">
                        {post.category.name}
                      </span>
                    </div>
                  )}
                </div>
                <div class="p-4">
                  <div class="flex items-center mb-2 text-xs text-gray-500">
                    {post.authors?.[0] && (
                      <>
                        <span>Por {post.authors[0].name}</span>
                        <span class="mx-2">‚Ä¢</span>
                      </>
                    )}
                    <span>{formatDate(post.publishedAt || post.createdAt)}</span>
                  </div>
                  <h3 class="font-bold text-lg mb-2">
                    <a href={`/${post.slug}`} class="hover:text-red-600 transition-colors">
                      {post.title}
                    </a>
                  </h3>
                  {post.excerpt && (
                    <p class="text-gray-600 text-sm mb-3 line-clamp-3">
                      {post.excerpt.length > 120 ? post.excerpt.substring(0, 120) + '...' : post.excerpt}
                    </p>
                  )}
                </div>
              </article>
            ))}
