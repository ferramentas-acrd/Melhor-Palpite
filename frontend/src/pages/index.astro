---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getPosts, getFeaturedBettingHouses, getFeaturedBettingPredictions, getActiveBanners, formatDate, getImageUrl, type Post } from '../lib/strapi';

// Fetch data from Strapi API
let posts: Post[] = [];
let bettingHouses = [];
let predictions = [];
let banners = [];

try {
  // Fetch posts from Strapi
  posts = await getPosts(9); // Get 9 posts (1 featured + 8 others)
  console.log('✅ Posts loaded from Strapi:', posts.length);
  
  // Fetch betting houses from Strapi
  bettingHouses = await getFeaturedBettingHouses(6);
  console.log('✅ Betting houses loaded from Strapi:', bettingHouses.length);
  
  // Fetch predictions from Strapi
  predictions = await getFeaturedBettingPredictions(4);
  console.log('✅ Predictions loaded from Strapi:', predictions.length);
  
  // Fetch banners from Strapi
  banners = await getActiveBanners('sidebar');
  console.log('✅ Banners loaded from Strapi:', banners.length);
} catch (error) {
  console.error('❌ Error loading data from Strapi:', error);
}

// Get featured post (first post)
const featuredPost = posts[0];
const otherPosts = posts.slice(1);
---

<Layout title="Corinthians Online - A Casa de Apostas da Fiel">
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
      
      <!-- Hero Section with Featured Post -->
      {featuredPost && (
        <section class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
          <div class="grid md:grid-cols-2 gap-0">
            <div class="relative">
              <img 
                src={featuredPost.coverImage ? getImageUrl(featuredPost.coverImage, 'large') : '/placeholder.svg'}
                alt={featuredPost.coverImage?.alternativeText || featuredPost.title}
                class="w-full h-64 md:h-full object-cover"
              />
              <div class="absolute top-4 left-4">
                {featuredPost.category && (
                  <span class="bg-red-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
                    {featuredPost.category.name}
                  </span>
                )}
              </div>
            </div>
            <div class="p-8 flex flex-col justify-center">
              <h1 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">
                <a href={`/${featuredPost.slug}`} class="hover:text-red-600 transition-colors">
                  {featuredPost.title}
                </a>
              </h1>
              {featuredPost.excerpt && (
                <p class="text-gray-600 mb-6 text-lg leading-relaxed">
                  {featuredPost.excerpt}
                </p>
              )}
              <div class="flex items-center text-sm text-gray-500">
                {featuredPost.authors?.[0] && (
                  <span>Por {featuredPost.authors[0].name}</span>
                )}
                <span class="mx-2">•</span>
                <span>{formatDate(featuredPost.publishedAt || featuredPost.createdAt)}</span>
              </div>
            </div>
          </div>
        </section>
      )}

      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          
          <!-- Latest News Grid -->
          <section class="mb-8">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-3xl font-bold text-gray-900">Últimas Notícias</h2>
              <a href="/noticias" class="text-red-600 hover:text-red-800 font-medium">
                Ver Todas →
              </a>
            </div>
            
            <!-- Pre-delimited grid: 2 rows x 4 columns -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              {Array.from({ length: 8 }, (_, index) => {
                const post = otherPosts[index];
                return post ? (
                  <article class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
                    <div class="relative">
                      <img 
                        src={post.coverImage ? getImageUrl(post.coverImage, 'medium') : '/placeholder.svg'}
                        alt={post.coverImage?.alternativeText || post.title}
                        class="w-full h-48 object-cover"
                      />
                      {post.category && (
                        <div class="absolute top-3 left-3">
                          <span class="bg-black text-white px-2 py-1 rounded text-xs font-medium">
                            {post.category.name}
                          </span>
                        </div>
                      )}
                    </div>
                    <div class="p-4">
                      <h3 class="font-bold text-base mb-2 line-clamp-2">
                        <a href={`/${post.slug}`} class="hover:text-red-600 transition-colors">
                          {post.title}
                        </a>
                      </h3>
                      {post.excerpt && (
                        <p class="text-gray-600 mb-3 text-xs line-clamp-2">
                          {post.excerpt}
                        </p>
                      )}
                      <div class="text-xs text-gray-500">
                        {post.authors?.[0] && (
                          <>
                            {post.authors[0].name} • 
                          </>
                        )}
                        {formatDate(post.publishedAt || post.createdAt)}
                      </div>
                    </div>
                  </article>
                ) : (
                  <!-- Placeholder for empty slot -->
                  <div class="bg-gray-100 border-2 border-dashed border-gray-300 rounded-lg p-6 flex flex-col items-center justify-center h-80">
                    <div class="text-gray-400 text-center">
                      <svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                      </svg>
                      <p class="text-sm font-medium mb-2">Espaço Reservado</p>
                      <p class="text-xs">Conteúdo será exibido automaticamente quando publicado</p>
                    </div>
                  </div>
                );
              })}
            </div>
          </section>

          <!-- Betting Predictions Section -->
          <section class="mb-8">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-3xl font-bold text-gray-900">Palpites do Dia</h2>
              <a href="/palpites" class="text-red-600 hover:text-red-800 font-medium">
                Ver Todos →
              </a>
            </div>
            
            <!-- Pre-delimited grid: 1 row x 4 columns -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              {Array.from({ length: 4 }, (_, index) => {
                const prediction = predictions[index];
                return prediction ? (
                  <article class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
                    <div class="flex justify-between items-start mb-3">
                      <h3 class="font-bold text-base text-gray-900 line-clamp-2">
                        {prediction.match}
                      </h3>
                      <span class={`px-2 py-1 rounded text-xs font-medium ${
                        prediction.confidence === 'alta' ? 'bg-green-100 text-green-800' :
                        prediction.confidence === 'media' ? 'bg-yellow-100 text-yellow-800' :
                        'bg-gray-100 text-gray-800'
                      }`}>
                        {prediction.confidence}
                      </span>
                    </div>
                    <p class="text-red-600 font-semibold mb-2 text-sm">
                      {prediction.prediction}
                    </p>
                    {prediction.odds && (
                      <p class="text-xs text-gray-600 mb-3">
                        Odd: {prediction.odds}
                      </p>
                    )}
                    <div class="flex justify-between items-center text-xs text-gray-500">
                      <span>{formatDate(prediction.matchDate)}</span>
                      <a href={`/palpites/${prediction.slug}`} class="text-red-600 hover:text-red-800 font-medium">
                        Ver análise →
                      </a>
                    </div>
                  </article>
                ) : (
                  <!-- Placeholder for empty prediction slot -->
                  <div class="bg-gray-100 border-2 border-dashed border-gray-300 rounded-lg p-6 flex flex-col items-center justify-center h-56">
                    <div class="text-gray-400 text-center">
                      <svg class="w-10 h-10 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                      </svg>
                      <p class="text-sm font-medium mb-1">Palpite Reservado</p>
                      <p class="text-xs">Análises serão exibidas aqui</p>
                    </div>
                  </div>
                );
              })}
            </div>
          </section>

        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          
          <!-- Featured Betting Houses -->
          <section class="bg-white rounded-lg shadow-lg p-6 mb-8">
            <h3 class="text-xl font-bold mb-4 text-gray-900">Melhores Casas de Apostas</h3>
            <div class="space-y-4">
              {Array.from({ length: 6 }, (_, index) => {
                const house = bettingHouses[index];
                return house ? (
                  <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex items-center justify-between mb-2">
                      <h4 class="font-semibold text-lg">{house.name}</h4>
                      <div class="flex items-center">
                        <span class="text-yellow-500 mr-1">⭐</span>
                        <span class="text-sm font-medium">{house.rating}</span>
                      </div>
                    </div>
                    {house.welcomeBonus && (
                      <p class="text-sm text-green-600 mb-2">🎁 {house.welcomeBonus}</p>
                    )}
                    {house.description && (
                      <p class="text-xs text-gray-600 mb-3 line-clamp-2">{house.description}</p>
                    )}
                    <a 
                      href={house.affiliateLink}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-block w-full text-center bg-red-600 text-white py-2 px-4 rounded font-semibold hover:bg-red-700 transition-colors"
                    >
                      Apostar Agora
                    </a>
                  </div>
                ) : (
                  <!-- Placeholder for empty betting house slot -->
                  <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 flex flex-col items-center justify-center h-32 bg-gray-50">
                    <div class="text-gray-400 text-center">
                      <svg class="w-8 h-8 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                      </svg>
                      <p class="text-xs font-medium">Casa de Apostas</p>
                    </div>
                  </div>
                );
              })}
            </div>
          </section>

          <!-- Sidebar Banners -->
          {banners.map((banner) => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-6">
              <a 
                href={banner.link || '#'}
                target={banner.targetBlank ? '_blank' : '_self'}
                rel={banner.targetBlank ? 'noopener noreferrer' : undefined}
              >
                <img 
                  src={getImageUrl(banner.image)}
                  alt={banner.image.alternativeText || banner.title}
                  class="w-full h-auto"
                />
                {banner.ctaText && (
                  <div class="p-4">
                    <p class="text-center font-semibold text-red-600">{banner.ctaText}</p>
                  </div>
                )}
              </a>
            </div>
          ))}

          <!-- Newsletter Signup -->
          <section class="bg-red-600 text-white rounded-lg p-6">
            <h3 class="text-xl font-bold mb-3">Fique por Dentro!</h3>
            <p class="text-sm mb-4">Receba as últimas notícias do Corinthians e dicas de apostas.</p>
            <form class="space-y-3">
              <input 
                type="email" 
                placeholder="Seu e-mail"
                class="w-full px-3 py-2 text-gray-900 rounded border-0 focus:ring-2 focus:ring-white"
              />
              <button 
                type="submit"
                class="w-full bg-white text-red-600 py-2 px-4 rounded font-semibold hover:bg-gray-100 transition-colors"
              >
                Inscrever-se
              </button>
            </form>
          </section>

        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>