{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site Settings",
    "description": "Configurações globais do site"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "site_name": {
      "type": "string",
      "required": true
    },
    "site_description": {
      "type": "text",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "social_media_links": {
      "type": "component",
      "repeatable": true,
      "component": "footer.social-link"
    },
    "analytics_code": {
      "type": "text"
    },
    "google_tag_manager_id": {
      "type": "string"
    },
    "maintenance_mode": {
      "type": "boolean",
      "default": false
    },
    "maintenance_message": {
      "type": "text"
    },
    "default_seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "contact_email": {
      "type": "email"
    },
    "contact_phone": {
      "type": "string"
    },
    "address": {
      "type": "text"
    }
  }
}